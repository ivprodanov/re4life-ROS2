<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="relife">
  <!-- Include the ROS2 control configuration -->
  <xacro:include filename="$(find re4life_robot_description)/urdf/relife_ros2_control.xacro"/>
 
  <!-- Inertial macros - unchanged -->
  <xacro:macro name="inertial_box" params="mass x y z *origin">
    <inertial>
      <xacro:insert_block name="origin"/>
      <mass value="${mass}" />
      <inertia ixx="${(1/12.0) * mass * (y*y+z*z)}"
              ixy="0.0" ixz="0.0"
              iyy="${(1/12.0) * mass * (x*x+z*z)}"
              iyz="0.0"
              izz="${(1/12.0) * mass * (x*x+y*y)}" />
    </inertial>
  </xacro:macro>

  <xacro:macro name="inertial_cylinder" params="mass length radius *origin">
    <inertial>
      <xacro:insert_block name="origin"/>
      <mass value="${mass}" />
      <inertia ixx="${(1/12.0) * mass * (3*radius*radius + length*length)}"
              ixy="0.0" ixz="0.0"
              iyy="${(1/12.0) * mass * (3*radius*radius + length*length)}"
              iyz="0.0"
              izz="${0.5 * mass * radius*radius}" />
    </inertial>
  </xacro:macro>

  <!-- Base link - increased mass from 2.5 to 15 kg -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.1"/>
      </geometry>
      <material>
        <color rgba="0.8 0.8 0.8 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.3 0.1"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="15.0" x="0.3" y="0.3" z="0.1">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
    <xacro:inertial_box 
      mass="85.0" 
      x="0.45"    
      y="0.28" 
      z="0.18">
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>
  
  <!-- Odom Frame -->
  <link name="odom"/>

  <!-- Joint connecting base_link to odom -->
  <joint name="base_to_odom" type="fixed">
    <parent link="odom"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
 
  <link name="Body_link">
    <collision>
        <origin xyz="0 0 0.0885" rpy="0 0 0"/>
        <geometry>
            <box size="0.45 0.28 0.18"/>
        </geometry>
    </collision>
    <xacro:inertial_box
      mass="85.0"
      x="0.45"
      y="0.28"
      z="0.18">
      <origin xyz="0 0 0.09" rpy="0 0 0" />
  </xacro:inertial_box>
    <visual>
        <origin rpy="0.0 1.42294 0.0" xyz="0.17482 -0.00088 0.15732"/>
        <material name="Material.001"/>
        <geometry>
            <mesh filename="package://re4life_robot_description/meshes/Cylinder.001.dae" scale="0.00883 0.00889 0.10297"/>
        </geometry>
    </visual>
  </link>

  <joint name="base_to_body" type="fixed">
      <parent link="base_link"/>
      <child link="Body_link"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
 
  <joint name="BackWheel_link_joint" type="revolute">
    <parent link="Body_link"/>
    <child link="BackWheel_link"/>
    <origin xyz="-0.45842 0.00285 0.05" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1e16" upper="1e16" effort="1.0" velocity="10.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>
  
  <joint name="FrontWheel_link_joint" type="revolute">
    <parent link="Body_link"/>
    <child link="FrontWheel_link"/>
    <origin xyz="0.17030 0.00221 0.05" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1e16" upper="1e16" effort="1.0" velocity="10.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>


  <!-- Driving wheels - increased effort and adjusted dynamics -->
  <joint name="LeftWheel_link_joint" type="continuous">
    <limit effort="250" velocity="0.5"/>  <!-- Increased effort from 10 to 50 -->
    <dynamics damping="0.1" friction="0.1"/>  <!-- Increased damping and friction -->
    <origin rpy="${-pi/2} 0 0" xyz="-0.24508 0.28586 0.05"/>
    <parent link="Body_link"/>
    <child link="LeftWheel_link"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="5.0" friction="0.1"/>
  </joint>

  <joint name="RightWheel_link_joint" type="continuous">
    <limit effort="250" velocity="0.5"/>  <!-- Increased effort from 10 to 50 -->
    <dynamics damping="0.1" friction="0.1"/>  <!-- Increased damping and friction -->
    <origin rpy="${pi/2} 0 0" xyz="-0.24508 -0.28586 0.05"/>
    <parent link="Body_link"/>
    <child link="RightWheel_link"/>
    <axis xyz="0 0 -1"/>
    <dynamics damping="5.0" friction="0.1"/>
  </joint>

  <!-- Wheels - increased mass from 0.5 to 3.75 kg each -->
  <!-- Back Wheel -->
  <link name="BackWheel_link">
    <collision>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder 
    mass="3.75" 
    length="0.02"   
    radius="0.05">  
    <origin xyz="-0.45842 0.00285 0.05" rpy="${pi/2} 0 0"/>
  </xacro:inertial_cylinder>
    <visual name="BackWheel">
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <material name="Backdrop.011"/>
      <geometry>
        <mesh filename="package://re4life_robot_description/meshes/Front_end.012.dae" scale="0.0026 0.0026 0.0026"/>
      </geometry>
    </visual>
  </link>

  <!-- Front Wheel -->
  <link name="FrontWheel_link">
    <collision>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder 
    mass="3.75" 
    length="0.02"   
    radius="0.05">  
    <origin xyz="-0.45842 0.00285 0.05" rpy="${pi/2} 0 0"/>
  </xacro:inertial_cylinder>

    <visual name="FrontWheel">
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <material name="Backdrop.010"/>
      <geometry>
        <mesh filename="package://re4life_robot_description/meshes/Front_end.011.dae" scale="0.0026 0.0026 0.0026"/>
      </geometry>
    </visual>
  </link>

  <!-- Left Wheel -->
  <link name="LeftWheel_link">
    <collision>
      <origin xyz="0 0 0" rpy="${-pi/2} 0 ${pi/2}"/>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
    </collision>
    <visual name="LeftWheel">
      <origin xyz="0 0 0" rpy="${-pi/2} 0 ${pi/2}"/>
      <material name="Backdrop.013"/>
      <geometry>
        <mesh filename="package://re4life_robot_description/meshes/Front_end.014.dae" scale="0.0026 0.0026 0.0026"/>
      </geometry>
    </visual>
    <xacro:inertial_cylinder 
    mass="3.75" 
    length="0.02"   
    radius="0.05">  
    <origin xyz="-0.45842 0.00285 0.05" rpy="${pi/2} 0 0"/>
  </xacro:inertial_cylinder>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.8</mu>    <!-- sliding friction -->
            <mu2>0.4</mu2>  <!-- rolling friction -->
          </ode>
        </friction>
        <!-- optional bounce, contact parameters, etc. -->
      </surface>
    </collision>
  </link>

  <!-- Right Wheel -->
  <link name="RightWheel_link">
    <collision>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
    </collision>
    <visual name="RightWheel">
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <material name="Backdrop.012"/>
      <geometry>
        <mesh filename="package://re4life_robot_description/meshes/Front_end.013.dae" scale="0.0026 0.0026 0.0026"/>
      </geometry>
    </visual>
    <xacro:inertial_cylinder 
    mass="3.75" 
    length="0.02"   
    radius="0.05">  
    <origin xyz="-0.45842 0.00285 0.05" rpy="${pi/2} 0 0"/>
  </xacro:inertial_cylinder>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0.8</mu>    <!-- sliding friction -->
            <mu2>0.4</mu2>  <!-- rolling friction -->
          </ode>
        </friction>
        <!-- optional bounce, contact parameters, etc. -->
      </surface>
    </collision>
  </link>

  <!-- Ultrasonic sensor - unchanged -->
  <link name="ultrasonic_link">
    <visual name="ultrasonic">
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.00334 0.00396 0.00339"/>
      </geometry>
    </visual>
  </link>
 
  <joint name="ultrasonic_link_joint" type="fixed">
    <limit effort="30" lower="-3" upper="3" velocity="1"/>
    <origin rpy="0 0 0" xyz="0.23943 -0.00200 0.04405"/>
    <parent link="Body_link"/>
    <child link="ultrasonic_link"/>
  </joint>

  <!-- LIDAR link - unchanged -->
  <link name="lidar_link">
    <inertial>
      <mass value="0.5"/>  <!-- Increased from 0.05 to 0.5 kg -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-4" ixy="0" ixz="0" iyy="1e-4" iyz="0" izz="1e-4"/>  <!-- Increased inertia -->
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="Body_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
  </joint>

  <!-- Camera joint and link - unchanged -->
  <joint name="camera_joint" type="fixed">
    <origin rpy="0.0 1.5708 0.0" xyz="0.19112 0.00194 0.54940"/>
    <parent link="Body_link"/>
    <child link="camera"/>
  </joint>
 
  <link name="camera">
    <sensor name="Camera" type="camera">
      <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
      <parent link="camera"/>
      <camera>
        <image>
          <width>640</width>
          <height>480</height>
          <hfov>1.5708</hfov>
        </image>
      </camera>
    </sensor>
    <visual name="HelmetGlass">
      <origin rpy="0.0 -1.5708 0.0" xyz="0.53582 0.00004 -0.03632"/>
      <material name="Material.003"/>
      <geometry>
        <mesh filename="package://re4life_robot_description/meshes/Cube.004.dae" scale="0.02382 0.02382 0.02382"/>
      </geometry>
    </visual>
  </link>

  <!-- Define materials - unchanged -->
  <material name="Backdrop.010">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
 
  <material name="Backdrop.011">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
 
  <material name="Backdrop.012">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
 
  <material name="Backdrop.013">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
 
  <material name="Material.001">
    <color rgba="0.10588 0.10588 0.10588 1.0"/>
  </material>
 
  <material name="Material.003">
    <color rgba="0.10588 0.10588 0.10588 1.0"/>
  </material>
 
  <gazebo reference="LeftWheel_link">
    <mu1>2.0</mu1>  <!-- Slightly reduced from 2.5 -->
    <mu2>2.0</mu2>  <!-- Slightly reduced from 2.5 -->
    <kp>250.0</kp>  <!-- Reduced from 500.0 -->
    <kd>5.0</kd>    <!-- Reduced from 10.0 -->
    <max_vel>0.5</max_vel>  <!-- Reduced from 1.0 -->
    <max_force>100.0</max_force>  <!-- Reduced from 250.0 -->
  </gazebo>
    
  <gazebo reference="RightWheel_link">
    <mu1>2.0</mu1>  <!-- Slightly reduced from 2.5 -->
    <mu2>2.0</mu2>  <!-- Slightly reduced from 2.5 -->
    <kp>250.0</kp>  <!-- Reduced from 500.0 -->
    <kd>5.0</kd>    <!-- Reduced from 10.0 -->
    <max_vel>0.5</max_vel>  <!-- Reduced from 1.0 -->
    <max_force>100.0</max_force>  <!-- Reduced from 250.0 -->
  </gazebo>
  
  <gazebo reference="FrontWheel_link">
    <mu1>0.1</mu1>  <!-- Lowered from 0.2 for better sliding -->
    <mu2>0.1</mu2>  <!-- Lowered from 0.2 for better sliding -->
    <kp>10.0</kp>  <!-- Increased for better stability -->
    <kd>10.0</kd>  <!-- Increased for better stability -->
  </gazebo>
  
  <gazebo reference="BackWheel_link">
    <mu1>0.1</mu1>  <!-- Lowered from 0.2 for better sliding -->
    <mu2>0.1</mu2>  <!-- Lowered from 0.2 for better sliding -->
    <kp>10.0</kp>  <!-- Increased for better stability -->
    <kd>10.0</kd>  <!-- Increased for better stability -->
  </gazebo>

  <!-- LIDAR sensor - unchanged -->
  <gazebo reference="lidar_link">
    <sensor name="lidar_sensor" type="ray">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1.0</resolution>
            <min_angle>-3.14</min_angle>
            <max_angle>3.14</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>
          <max>8.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="lidar_plugin" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=scan</remapping>
        </ros>
        <frame_name>lidar_link</frame_name>
        <output_type>sensor_msgs/LaserScan</output_type>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Differential drive plugin - adjusted for 50kg robot -->
  <gazebo>
    <plugin name="gazebo_ros_diff_drive" filename="libgazebo_ros_diff_drive.so">
      <update_rate>100</update_rate>
      <left_joint>LeftWheel_link_joint</left_joint>
      <right_joint>RightWheel_link_joint</right_joint>
      <wheel_separation>0.57</wheel_separation>
      <wheel_diameter>0.1</wheel_diameter>
      <max_wheel_torque>75</max_wheel_torque>  <!-- Reduced from 150 to prevent tipping -->
      <max_wheel_acceleration>0.05</max_wheel_acceleration>  <!-- Significantly reduced to prevent tipping -->
      <max_velocity>0.3</max_velocity>  <!-- Moderate top speed -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>false</publish_wheel_tf>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <ros>
        <namespace>/</namespace>
      </ros>
    </plugin>
  </gazebo>
</robot>